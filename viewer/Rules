#!/usr/bin/env ruby

compile '/index.html' do
  filter :erb
  layout '/default.*'
  write '/index.html'
end

compile '/category/*.html' do
  filter :erb
  cat_name = item.identifier.to_s.split("\/").last.split(".").first
  layout '/category.*', locals: { name: cat_name }
  write "/#{I18n.transliterate(cat_name)}.html"
end

compile '/**/*' do
  write item.identifier.to_s
end

layout '/**/*', :erb
